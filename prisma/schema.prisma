generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pessoa {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String @default("")

  chamados Chamado[]
}

model Chamado {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Status

  pessoaId Int
  pessoa   Pessoa @relation(references: [id], fields: [pessoaId])
}

enum Status {
  ABERTO
  EM_ANDAMENTO
  CONCLUIDO
  CANCELADO
}
